{
  "extends": ["plugin:shopify/esnext", "plugin:shopify/jquery"],
  "env": {
    "jest": true
  },
  "rules": {
    "babel/no-invalid-this": 0,
    "import/no-anonymous-default-export": 0,
    "import/no-unresolved": ["error", { "ignore": ["^jquery"] }],
    "no-alert": 0,
    "no-console": 0,
    "no-new": 0,
    "node/shebang": 0,
    "quotes": ["error", "double"],
    "quotemark": [true, "double", "avoid-escape"],
    "object-curly-spacing": ["error", "always"]
  },
  "globals": {
    "document": true,
    "window": true,
    "Shopify": true,
    "theme": true,
    "console": true,
    "setTimeout": true,
    "setInterval": true,
    "clearTimeout": true,
    "clearInterval": true,
    "history": true
  }
}
